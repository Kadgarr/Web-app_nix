@model PL.Models.PlaylistView
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YouMusLib</title>

</head>
    <body>
        <h3>Редактирование имени плейлиста</h3>

        <p>Для редактирования плейлиста заполните следующие поля:</p>

        <form method="post">

            <div>
                <label asp-for="Name_of_playlist">Измените название плейлиста:</label><br />
                <input type="text" asp-for="Name_of_playlist" /><br />
            </div>

            <div>
                <submit value="Внести изменения" />
            </div>
        </form>
    </body>
</html>