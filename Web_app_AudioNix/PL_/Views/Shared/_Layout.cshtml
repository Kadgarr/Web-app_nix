                        {
                            <a  class="nav-link active" asp-controller="Account" asp-action="Profile" asp-route-name="@User.Identity.Name" >Профиль</a>
                        
                        }
                        else
                        {
                            <a class="nav-link active" href="~/Account/Login">Вход </a>
                        }
