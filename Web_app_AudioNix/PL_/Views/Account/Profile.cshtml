@model PL.Models.UserView
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YouMusLib</title>

</head>
<body>
    <h3>Личный кабинет </h3>
<form  method="post">
    <div class="container"asp-validation-summary="All">
      
        <div class="col">
            <div class="form-group">
            <label asp-for="Picture">Аватар профиля:</label><br />
            <img src="@Model.Picture" width="30%" height="30%" class="img-thumbnail" />
      @*       <label asp-for="Picture">  Изменить:</label>
            <input type="file" asp-for="Picture"  class="form-control" style="width:50%"/><br>*@
        </div>
        </div>

        <div class="col">
            <div>
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Login">UserName</label><br />
            <input type="text" asp-for="Login" class="form-control" value="@User.Identity.Name" style="width:50%" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label><br />
            <input type="text" asp-for="Email" class="form-control" value="@Model.Email" style="width:50%" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="Date_of_registration">Дата регистрации</label><br />
            <input type="date" asp-for="Date_of_registration" value="@Model.Date_of_registration" class="form-control" style="width:50%" readonly/>
        </div>
           
        <div>
            <a  class="nav-link link-warning" asp-controller="Account" asp-action="EditProfile" asp-route-name="@User.Identity.Name" >Редактировать профиль</a>
        </div>
        </div>
     
    </div>
    @ViewData["MsgSaveEditUser"]
</form>

</body>
</html>




