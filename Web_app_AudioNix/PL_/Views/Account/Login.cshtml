@model PL.Models.AccountViewModels.LoginViewModel
<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YouMusLib</title>
      <style>
        .btn-primary {
            background-color: black;
            color: #FFA500;
            border-width: medium;
            border-color: #FFA500;
        }

            .btn-primary:hover,
            .btn-primary:focus,
            .btn-primary:visited {
                background-color: #D2691E;
                border-width: medium;
                border-color: black;
                color: black;
            }

        .spanValid{
            color:red;
        }
    </style>
</head>
<body>
    <h3>Авторизация</h3>

    <p>Для добавления песни заполните следующие поля:</p>

    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <div class="spanValid"  asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Login" class="form-label">Введите логин аккаунта</label><br />
            <input class="form-control" type="text" asp-for="Login" />
            <span class="spanValid" asp-validation-for="Login"></span>
        </div>

        <div>
            <label asp-for="Password" class="form-label"> Введите пароль</label><br />
            <input class="form-control" type="password" asp-for="Password" />
            <span class="spanValid" asp-validation-for="Password"></span>
        </div>
        <div class="form-check">
        
        <input class="form-check-input" asp-for="RememberMe"/>
        <label class="form-check-label" asp-for="RememberMe"></label>
    </div>
         <div>
            <button class="btn btn-primary" type="submit">Войти</button>
        </div>
    </form>
</body>
</html>