@model PL.Models.UserView
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YouMusLib</title>
     <style>
        .btn-primary {
            background-color: black;
            color: #FFA500;
            border-width: medium;
            border-radius: 12px;
            border-color: #FFA500;
        }

            .btn-primary:hover,
            .btn-primary:focus,
            .btn-primary:visited {
                background-color: #D2691E;
                border-width: medium;
                border-color: black;
                color: black;
            }

        .spanValid{
            color:red;
        }
    </style>
</head>
    <body>
        <h3>Редактирование профиля</h3>

        <p>Для редактирования профиля работайте со следующими поля:</p>
       
         <form method="post"  asp-controller="Account" asp-action="EditProfile">
            <div style="color:red" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
            <input type="hidden" asp-for="Id" class="form-control" value="@Model.Id" />
            </div>
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Измените логин</label><br />
                <input class="form-control" type="text" id="fieldLogin" asp-for="UserName" placeholder="Введите логин!"  />
                <span class="spanValid" asp-validation-for="UserName"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Измените email</label><br />
                <input class="form-control" id="fieldEmail" asp-for="Email" placeholder="email@example.com" type="email"  />
                <span class="spanValid" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"> Измените пароль</label><br />
                <input class="form-control" id="fieldPassword" placeholder="Password" asp-for="Password"  />
                <span class="spanValid" asp-validation-for="Password"></span>
       
            </div>

            <div class="mb-3">

                <label for="Picture">Выберите изображение:</label><br />
                <input class="form-control" aria-label="file example" type="file"asp-for="Picture" name="Picture"  /><br>
                <span class="spanValid" asp-validation-for="Picture"></span>
        
            </div>
     
              <div>
                <button class="btn btn-primary" type="submit">Cохранить изменения</button>
            </div>
    </form>
    
    </body>
</html>