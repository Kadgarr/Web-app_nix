@model PL.Models.UserView
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YouMusLib</title>
     <style>
        .btn-primary {
            background-color: black;
            color: #FFA500;
            border-width: medium;
            border-radius: 12px;
            border-color: #FFA500;
        }

            .btn-primary:hover,
            .btn-primary:focus,
            .btn-primary:visited {
                background-color: #D2691E;
                border-width: medium;
                border-color: black;
                color: black;
            }

        .spanValid{
            color:red;
        }
    </style>
</head>
    <body>
        <h3>Редактирование профиля</h3>

        <p>Для редактирования профиля работайте со следующими поля:</p>
       
        <form method="post" asp-route-name="@User.Identity.Name">
             <div class="container"asp-validation-summary="All">
                <div>
                    <label asp-for="Email">Изменить Email</label><br />
                    <input type="text" asp-for="Login" class="form-control" value="@User.Identity.Name" /><br />
                </div>

                <div>
                    <label asp-for="Email">  Изменить Email:</label><br />
                    <input type="email" type="text" asp-for="Email" class="form-control"  /><br>
                </div>

                <div>
                    <label asp-for="Password"> Изменить пароль</label><br />
                    <input type="text" type="text" asp-for="Password" class="form-control" ><br />
                </div>
                 <div class="form-group">
                    <label asp-for="Picture">Аватар профиля:</label><br />
                    <img src="Pic" width="30%" height="30%" class="img-thumbnail" /><br />
                     <label asp-for="Picture">  Изменить:</label>
                    <input type="file" asp-for="Picture"  class="form-control" style="width:50%"/><br>
          

              <div>
                <button class="btn btn-primary" @*style="background-color:black"*@ type="submit">Сохранить изменения</button>
            </div>
             </div>
             </div>
        </form>
    
    </body>
</html>